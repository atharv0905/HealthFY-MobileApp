<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CaptureActivity">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:alpha="0.9"/>

    <ImageView
        android:id="@+id/menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:scaleType="fitXY"
        android:background="@drawable/menu3"
        />

    <ListView
        android:id="@+id/menulist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFCCCCCC"
        android:layout_below="@+id/menu"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:elevation="8dp"
        />

    <TextView
        android:id="@+id/history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="HOME PAGE"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:scaleType="fitXY"
        />

    <ImageView
        android:id="@+id/imagedrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="430dp"
        android:background="@drawable/camera"
        />

    <ImageView
        android:id="@+id/imagedropbackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="98dp"
        android:layout_marginBottom="428dp"
        android:background="@drawable/capturebackground"
        android:visibility="gone"
        />

    <ImageButton
        android:id="@+id/captureImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/camicon"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:elevation="8dp"
        />

    <ImageButton
        android:id="@+id/sendImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/sendbtn"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:visibility="gone"
        />
</RelativeLayout>